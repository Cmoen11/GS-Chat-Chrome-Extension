{
  "manifest_version": 2,

  "name": "GS Chat",
  "description": "En applikasjon som gjør det enklere å rolle på galtvortskolen.net",
  "version": "4.0",
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "index.html"
  },

  "permissions": [
    "https://ajax.googleapis.com/",
    "http://galtvortskolen.net/",
    "http://www.galtvortskolen.net/",
    "tabs",
    "notifications",
    "storage",
    "cookies"
  ],
  "background": {
    "scripts": [
      "js/jquery-3.2.1.min.js",
      "js/background.js"
    ]
  }
}
